<h2 class="heading">All Recipes...</h2>

<p>
<%= button_to "Add New Recipe", new_recipe_path, method: :get, class:"add_btn" %>
</p>

<% if @recipes.any? %> 
  <ul class="recipe_list">
  <% @recipes.each do |recipe| %>
    <li class="recipe_container">
    <div class="recipe_name">
      <%= link_to recipe.name, recipe_path(recipe) %>
      <span>
      <%= button_to "Remove", recipe_path(recipe), method: :delete, class: "btn"  %>
      </span>
    </div>
    <div class="recipe_description">
      <%= recipe.description %>
    </div>
    </li>
  <% end %>
  </ul> 
<% else %>
  <div>
    <h3>ğŸ˜¢You don't have any recipes saved. Create a recipe to see it hereğŸ˜ª</h3>
  </div>
<% end %>