<h1>Create a New Recipe</h1>

<%= form_with(model: @recipe, url: recipes_path) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :preparation_time %>
    <%= form.number_field :preparation_time, step: 1, min: 0 %>
    minutes
  </div>

  <div>
    <%= form.label :cooking_time %>
    <%= form.number_field :cooking_time, step: 1, min: 0 %>
    minutes
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :public %>
    <%= form.check_box :public %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
