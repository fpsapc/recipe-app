<!-- app/views/recipes/show.html.erb -->

<h1><%= @recipe.name %></h1>

<p>
  <% if @recipe.preparation_time.present? %>
    <strong>Preparation Time:</strong> <%= format_time(@recipe.preparation_time) %><br>
  <% end %>

  <% if @recipe.cooking_time.present? %>
    <strong>Cooking Time:</strong> <%= format_time(@recipe.cooking_time) %><br>
  <% end %>

  <strong>Description:</strong> <%= @recipe.description %><br>
  <strong>Public:</strong> <%= @recipe.public? ? 'Yes' : 'No' %>
</p>

<!-- Toggle button for Public column -->
<%= form_with(model: @recipe) do |form| %>
  <label class="switch">
    <%= form.label :public %>
    <%= form.check_box :public, onchange: 'this.form.submit();' %>
    <span class="slider round"></span>
  </label>
<% end %>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>
<div>
<%= button_to "generate shopping list", missing_food_path, method: :get %>
<%= button_to "Add ingredient", new_recipe_food_path, method: :get %>
</div>

<% if @foods.any? %>
  <table>
    <thead>
      <tr>
        <th>Food Name</th>
        <th>Quantity</th>
        <th>Value</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
        <td><%= food.food.name %></td>
        <td><%= "#{food.quantity} #{food.food.measurement_unit}s"  %></td>
        <td><%= number_to_currency(food.quantity * food.food.price) %></td>
        <td>
          <%= link_to "Modify", edit_recipe_food_path(food), class: "btn" %>
          <%= button_to "Delete", destroy_recipe_food_path(food), method: :delete, class: "btn" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No food available.</p>
<% end %>

<%= link_to "Back to All Recipes", recipes_path %>
