<!-- app/views/foods/new.html.erb -->

<h1 class="heading">Add New Food</h1>

<%= form_with(model: @food, local: true) do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :measurement_unit %><br>
    <%= form.text_field :measurement_unit %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.number_field :price, step: '0.01' %>
  </div>

  <div>
    <%= form.label :quantity %><br>
    <%= form.number_field :quantity %>
  </div>

  <div class="create_food_btn">
    <%= form.submit "Create Food" %>
  </div>
<% end %>

<%= link_to "Back to List", foods_path %>
