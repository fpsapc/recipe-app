<h4>Add Recipe Food</h4>
<%= form_with(model: @recipe_food, url: recipe_recipe_foods_path) do |form| %>
      <% if @recipe_food.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(@recipe_food.errors.count, "error") %> prohibited this food from being saved:</h2>
    
          <ul>
            <% @recipe_food.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <div>
        <%= form.label :name, style: "display: block" %>
        <%= form.select :food_id, @foods, { :include_blank => '-- Select One --' }, :required => true %>
      </div>
    
      <div>
        <%= form.label :quantity, style: "display: block" %>
        <%= form.number_field :quantity, placeholder: 'Quantity..', :required => true %>
      </div>
    
      <div>
        <%= form.submit "Add ingredient" %>
      </div>
    <% end %>